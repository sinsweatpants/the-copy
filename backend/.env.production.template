# Environment variables for production
# Copy this file to .env.production and fill in the values

# --- General ---
NODE_ENV=production
LOG_LEVEL=info
PORT=4000

# --- Security ---
# The origin of the frontend application
CORS_ORIGIN=https://your-frontend-app.com
# A strong, secret string for signing JWTs
JWT_SECRET=
# A strong, secret string for signing refresh tokens
REFRESH_TOKEN_SECRET=

# --- Services ---
# Connection string for the PostgreSQL database
DATABASE_URL=postgresql://user:password@host:port/db
# Connection string for the Redis server
REDIS_URL=redis://localhost:6379

# --- External APIs ---
# API key for Google Gemini
GEMINI_API_KEY=
