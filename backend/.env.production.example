# Backend production environment variables
# Copy to backend/.env.production and provide real values

# Server Configuration
NODE_ENV=production
PORT=4000

# Database
DATABASE_URL=postgres://user:password@localhost:5432/thecopy_prod
# DISABLE_DB=true  # Uncomment to disable database

# Redis (Optional)
REDIS_URL=redis://localhost:6379
DISABLE_REDIS=true  # Set to false to enable Redis

# JWT Secrets (Generate strong random strings)
JWT_SECRET=your_very_long_and_secure_jwt_secret_here_minimum_20_chars
REFRESH_TOKEN_SECRET=your_very_long_and_secure_refresh_token_secret_here_minimum_20_chars

# Gemini AI API
GEMINI_API_KEY=your_gemini_api_key_here

# Frontend Origin (for CORS)
FRONTEND_ORIGIN=https://yourdomain.com