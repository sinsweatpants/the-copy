{
  "name": "screenplay-backend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch -r dotenv/config src/server.ts",
    "start": "node --enable-source-maps -r dotenv/config dist/server.js",
    "build": "tsc",
    "worker": "tsx watch -r dotenv/config src/workers/pdf-worker.ts",
    "test": "jest",
    "lint": "echo 'backend lint'",
    "migrate:create": "node-pg-migrate -m src/migrations create",
    "migrate:up": "node-pg-migrate -r dotenv/config up",
    "prod:start": "pm2 start dist/server.js --name ara-screenplay-api -i max",
    "prod:stop": "pm2 stop ara-screenplay-api",
    "prod:reload": "pm2 reload ara-screenplay-api",
    "prod:logs": "pm2 logs ara-screenplay-api"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "bullmq": "^5.58.5",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.19.2",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "node-pg-migrate": "^8.0.3",
    "opossum": "^9.0.0",
    "pg": "^8.16.3",
    "pino": "^9.9.0",
    "pino-http": "^10.5.0",
    "pino-pretty": "^13.1.1",
    "pm2": "^6.0.10",
    "puppeteer": "^23.4.0",
    "redis": "^5.8.2",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-rate-limit": "^5.1.3",
    "@types/helmet": "^0.0.48",
    "@types/jest": "^30.0.0",
    "@types/jsdom": "^21.1.7",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.9",
    "@types/opossum": "^8.1.9",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.3",
    "jest": "^30.0.5",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "tsx": "^4.19.1",
    "typescript": "^5.5.4"
  }
}
