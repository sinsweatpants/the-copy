{
  "name": "screenplay-backend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch -r dotenv/config src/server.ts",
    "start": "node --enable-source-maps -r dotenv/config dist/server.js",
    "build": "tsc",
    "seed": "tsx src/seed.ts",
    "test": "jest",
    "migrate:create": "node-pg-migrate -m src/migrations create",
    "migrate:up": "node-pg-migrate -r dotenv/config up"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.19.2",
    "express-rate-limit": "^8.0.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "nanoid": "^5.0.7",
    "node-pg-migrate": "^8.0.3",
    "pg": "^8.16.3",
    "pino": "^9.9.0",
    "pino-http": "^10.5.0",
    "pino-pretty": "^13.1.1",
    "puppeteer": "^23.4.0",
    "redis": "^5.8.2",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-rate-limit": "^5.1.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.9",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.3",
    "jest": "^30.0.5",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "tsx": "^4.19.1",
    "typescript": "^5.5.4"
  }
}
