{
  "name": "vite-react-typescript-starter",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently 'npm:dev:backend' 'npm:dev:frontend'",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:frontend": "npm run dev --workspace=frontend",
    "build": "npm run build --workspace=frontend && npm run build --workspace=backend",
    "start:prod": "npm start --workspace=backend",
    "test": "npm test --workspace=backend && npm test --workspace=frontend",
    "lint": "npm run lint --workspace=backend && npm run lint --workspace=frontend",
    "test:backend": "npm test --workspace=backend",
    "test:frontend": "npm test --workspace=frontend"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.84.1",
    "@tanstack/react-query-devtools": "^5.84.1",
    "@tiptap/extension-bold": "^3.0.9",
    "@tiptap/extension-document": "^3.0.9",
    "@tiptap/extension-heading": "^3.0.9",
    "@tiptap/extension-italic": "^3.0.9",
    "@tiptap/extension-paragraph": "^3.0.9",
    "@tiptap/extension-text": "^3.0.9",
    "@tiptap/extension-underline": "^3.0.9",
    "@tiptap/pm": "^3.0.9",
    "@tiptap/react": "^3.0.9",
    "@tiptap/starter-kit": "^3.0.9",
    "cors": "^2.8.5",
    "dompurify": "^3.2.6",
    "express": "^4.19.2",
    "lucide-react": "^0.344.0",
    "multer": "^2.0.2",
    "pdf-parse": "^1.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tesseract.js": "^6.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/cors": "^2.8.19",
    "@types/dompurify": "^3.2.0",
    "@types/express": "^4.17.21",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.3.1",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^9.2.0",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "nodemon": "^3.1.10",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2"
  }
}
